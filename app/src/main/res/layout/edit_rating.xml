<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/courseNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Edit Rating"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/workloadRatingEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Workload Rating (1-10)"
        android:inputType="number" />

    <EditText
        android:id="@+id/courseScoreEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Score (1-10) "
        android:inputType="number" />

    <CheckBox
        android:id="@+id/checksAttendanceCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professor checks attendance" />

    <CheckBox
        android:id="@+id/allowsLateSubmissionCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professor allows late homework submission" />

    <EditText
        android:id="@+id/commentsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Other Comments"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/updateRatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Updated Rating"
        android:layout_gravity="center" />

</LinearLayout>